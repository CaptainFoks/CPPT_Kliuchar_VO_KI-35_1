package KI35.Kliuchar.lab4;

import java.util.Scanner;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);   

        System.out.print("Введіть значення x: ");
        double x = scanner.nextDouble();

        try {
            double result = Calculator.calculate(x);   

            Calculator.writeToFile("result.txt", result);
            System.out.println("Результат записано у файл result.txt");
        } catch (ArithmeticException e) {
            System.out.println("Помилка: ділення на нуль");
        } catch (IOException e) {
            System.out.println("Помилка при записі у файл");
        }
    }
}