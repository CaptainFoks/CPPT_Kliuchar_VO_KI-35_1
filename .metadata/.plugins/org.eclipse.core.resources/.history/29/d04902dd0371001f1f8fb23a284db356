package KI35.Kliuchar.lab2; 
 
import java.io.*; 
 
/** 
 * Class <code>TV</code> implements TV
 */ 
public class TV {
    private Screen screen;
    private Sound sound;
    private RemoteControl remoteControl;
    private boolean isOn;
    private int currentChannel;
    private PrintWriter fout; 

    /** 
     * Constructor 
     * @throws FileNotFoundException 
     */ 
    public TV() throws FileNotFoundException 
    { 
        this.screen = new Screen();
        this.sound = new Sound();
        this.remoteControl = new RemoteControl();
        this.isOn = false;
        this.currentChannel = 1;
    }
    /** 
     * Constructor 
     * @param <code>resource</code> screen sound remoteControl 
     * @throws FileNotFoundException 
     */ 
    	public TV(Screen screen, Sound sound, RemoteControl remoteControl) {
        this.screen = screen;
        this.sound = sound;
        this.remoteControl = remoteControl;
        this.isOn = false;
        this.currentChannel = 1;
    }
    
    class Screen {
        private int size;
        private String type;        
        public void setSize(int size) {
            this.size = size;
        }
        public void setTVType(String a)
        {
        type=a;
        }
        public int getSize() {
            return size;
        }

    }

    class Sound {
        private int volume;
        private String type;
    }

    class RemoteControl {
        private boolean isOn;  
    }      
